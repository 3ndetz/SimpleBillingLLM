    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Streamlit App",
            "type": "streamlit",
            "request": "launch",
            "program": "run ${workspaceFolder}/streamlit_app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Telegram bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tg_bot_start.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run HTTP API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}